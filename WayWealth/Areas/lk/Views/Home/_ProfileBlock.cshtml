                        <p class="price">$ @(Model.BalanceRewards.ToString("N2"))</p>
                        <div class="btn-block">
                            <a href="@Url.Action("transfer", "home")"><span data-text="@Resources.Resource.TransferBtn">@Resources.Resource.TransferBtn</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="swiper-pagination"></div>
    </div>
</div>