                    <p class="desc">@Resources.Resource.banner_1_desc</p>
                    <a href="@Url.Action("about", "home")" class="link"><span data-text="@Resources.Resource.MoreBtn">@Resources.Resource.MoreBtn</span></a>
                </div>
            </div>
            <div class="swiper-slide" style="background-image: url(/Content/img/banner2.jpg);">
